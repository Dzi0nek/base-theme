{% extends "base.twig" %}

{% block content %}
<div class="mpc-review container section-spacing mx-auto">
<h2 class="font-header text-2xl mb-4">{{ post.title }}</h2>
    <div class="w-[150px] stars relative mb-4">
        <img class="" src="{{ site.theme.link }}/images/icons/stars_border.png" />
        {% if post.stars %}
        <figure class="absolute h-full left-0 top-0 block overflow-hidden width-{{ post.stars * 20}}">
            <img class="max-w-[150px] object-fill absolute " src="{{ site.theme.link }}/images/icons/stars_full.png"
                alt="">
            {% endif %}
        </figure>
    </div>
    <article class="mb-8">{{ post.review}}</article>

    <div class="flex flex-col-reverse md:flex-row md:items-center">
        <img class="h-[100px] w-[100px] rounded-full object-cover mb-8 md:mb-0" src="{{post.thumbnail.src}}" alt="{{post.thumbnail.alt}}">
        <author class="w-full md:w-auto md:ml-8">
            <h1>{{ post.author }}</h1>
            <h3 class="mb-4">{{ post.position }}</h3>
        </author>

    </div>

</div>
{% endblock %}
